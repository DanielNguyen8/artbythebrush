


<div class="artwork-card">
  <div class="artwork-image">
    <%= cl_image_tag(@artwork.images.first.key) %>
  </div>
    <h3>Related artworks</h3>
<ul>
  <% @related_artworks.each do |r| %>
    <li><%= r.name %></li>
  <% end %>
</ul>
    <%= render "pages/favourite_button", artwork: @artwork %>
    <%= render "pages/like_button", artwork: @artwork %>
    <h2><%= @artwork.name %></h2>
  <div class="flex-info">
    <div class="flex-description">
      <p><%= @artwork.description %></p>
    </div>
    <div class="flex-avatar">
      <p>
        <%= link_to artist_path(@artwork.user_id) do %>
        <img src="https://www.vincentvangogh.org/images/self-portrait.jpg" class="artist-avatar">
        <h4 class="forum">Vincent Van Gogh</h3>
        <p class="garamond"><%= rand(100..1000) %> Admires</p>
        <% end %>
        <p>
          <%= link_to "Follow", user_follows_path(@artwork.user), class: "btn" %>
          <button type="button" class="button">Contact</button>
        </p>
      </p>
    </div>
  </div>
</div>


