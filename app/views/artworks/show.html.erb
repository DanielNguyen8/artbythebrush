<br/><br/><br/><br/><br/><br/>
  <h1>Artist's Other Work </h1>
</div>
<div class="card-grid-layout px-3">
  <% @artworks.each do |artwork| %>
      <div class="art" >
        <%= cl_image_tag(artwork.images.first.key)%>
        <div class="card-description">
          <p class=""><%= artwork.name %></p>
        </div>
      </div>
  <% end %>
</div>


