<div class="container">
    <div class="sidenav">
        <ul class="menu-position text-capitalize">
            <li><a href="#" id="active-li">Current</a></li>
            <li><a href="#">Upcoming</a></li>
            <li><a href="#">Past</a></li>
            <li><a href="#">Museums and global exhibitions</a></li>
        </ul>
    </div>
    <div class="row">
        <% @galleries.each do |gallery| %>
        <div class="col-sm-4">
            <%= link_to gallery_path(gallery) do %>
            <div class="gallery-card">
                <%= cl_image_tag(gallery.image.key, :class => "card-img-top")%>
                
                <div class="gallery-card-avatar">
                    <%= cl_image_tag(gallery.user.avatar.key, :class => "image-circle") %>
                </div>
                <div class="card-body">
                    <p class="gallery-artist-name-text"><%= gallery.user.name %></p>
                    <p class="gallery-name-text"><%= gallery.name %></p>
                    <p class="card-text">Oil Paint on Canvas</p>
                    <p class="card-text"><small class="text-muted"><%= gallery.start_date.strftime("%d %B %Y") %> â€“ <%= gallery.end_date.strftime("%d %B %Y") %></small></p>
                    <div class="panel-thumbnails">
                        <div class="row">
                            <% gallery.curates.sample(3).each do |curate| %>
                            <div class="col-sm-4" id="img-row">
                                <div class="thumbnail">
                                    <%= cl_image_tag(curate.artwork.images.first.key, :class => "thumbnail-img") %> 
                                
                                </div>
                            </div>
                            <% end %>
                        
                        </div>
                    </div>
               </div>
               <% end %> 
            </div>
        </div>
        <% end %> 
    </div>
</div>




