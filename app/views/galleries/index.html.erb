
<section class="exhibitions-area exhibitions-page">
    <h4 class="headertext">Current Opening Galleries</h4>
<!--Start breadcrumb area-->
<section class="breadcrumb-area" style="background-image: url(http://mehedi.asiandevelopers.com/demo/museum/images/slides/v1-3.jpg);">
    <div class="container-gallery">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content clearfix">
                    <div class="title">
                        <h1>Current Galleries</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End breadcrumb area-->
    <div class="container-gallery">
        <div class="row masonary-layout">
            <!--Start single exhibition Box-->
              <% @galleries.each do |gallery| %>
            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12">
                <div class="single-exhibition-box style4">
                    <div class="img-holder">
                        <%= cl_image_tag(gallery.image.key)%>
                        <div class="overlay-style-one bg1">
                            <div class="zoom-button">
                                <a class="lightbox-image" data-fancybox="gallery" href="images/resources/exhibition-1.jpg">
                                    <i class="fa fa-search-plus" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="text-holder text-center">
                        <span>Exhibition</span>
                        <h2><%= gallery.name %></h2>
                        <h4>By <%= gallery.user.name %></h4>
                        <p>From <%= gallery.start_date %> until <%=gallery.end_date%></p>
                        <div class="bottom">
                            <div class="review-box">
                                <ul>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                </ul>
                            </div>
                            <div class="value">$ 60.00</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>


        <div class="row">
            <div class="col-xl-12">
                <div class="view-more-button text-center">
                    <a class="btn-two" href="#">View More</a>
                </div>
            </div>
        </div>
    </div>
</section>




<a href=""><%= link_to "Create new gallery", new_gallery_path %></a>



