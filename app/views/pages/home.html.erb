<% if @banner %>
  <div class="banner-container" height="980px">
    <div class="banner" >
      <h1>WELCOME<br>TO<br>ART BY<br>THE <spam class="brush-word">BRUSH</spam></h1>
      </div>
      <div class="video">
          <video height="auto" width="100%" autoplay="autoplay" loop muted>
          <source src= <%= URI.encode("https://res.cloudinary.com/dybthmrxc/video/upload/v1592444312/art_video_veikwz.mov")%> type="video/mp4">
        Your browser does not support the video tag.
        </video>
    </div>
  </div>

  <div class="second-banner">
  <h2 class="second-title">Welcome <%= @artist.name.split.first %></h2>
  <p class="paragraph">Select Some Genres Youâ€™re Interested In To Help Personalize Your Experience<br>Starting With Finding People To Follow</p>
  <% @top_tags.each do |tag| %>
    <%= link_to tag, tagged_path(tag: tag.name) %>
      <%= cl_image_tag(Artwork.tagged_with(tag.name).first.images.first.key, width: 24, height: 24, crop: :thumb, :quality=>"auto", :fetch_format=>:auto) %>
  <% end %>
  </div>
<% end %>

<div class="card-grid-layout px-3">
  <% @artworks.first(24).each do |artwork| %>
    <%= link_to artwork do %>
      <figure class="art card__hover" id="artwork-<%= artwork.id %>">
        <%= cl_image_tag(artwork.images.first.key, :width=>361, :quality=>"auto", :fetch_format=>:auto)%>
        <div class="card-description">
          <p class="card-details d-flex justify-content-center"><%= artwork.name %></p>
          <% end %>
            <% if user_signed_in? %>
            <div class="d-flex justify-content-center">
              <%= render "shared/like_button", artwork: artwork %>
              <%= render "shared/collection_modal", artwork: artwork %>
            </div>
        </div>
      </figure>
    <% end %>
  <% end %>
</div>

