<div class="masonry-with-columns px-3">
  <% @artworks.each do |artwork| %>
    <%= link_to artwork do %>
      <div class="art" >
        <%= cl_image_tag(artwork.images.first.key)%>
        <div class="card-description">
          <p class=""><%= artwork.name %></p>
          <% end %>
          <div class="d-flex">
            <% if user_signed_in? %>
              <%= render "like_button", artwork: artwork %>
              <%= render "collection_modal", artwork: artwork %>
              <% artwork.tag_list.each do |tag| %>
                <%= link_to tag, tagged_path(tag: tag) %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>

