<div class="masonry-with-columns px-3">
  <% @artworks.shuffle.each do |artwork| %>
      <div class="art" >
        <%= cl_image_tag(artwork.images.first.key)%>
        <div class="card-description">
          <p class=""><%= artwork.name %></p>
          <% if user_signed_in? %>
            <% if current_user.favourites.select { |f| f.artwork == artwork}.empty? %>
              <%= simple_form_for [artwork, @favourite] do |f| %>
                <%= f.button :submit  %>
              <% end %>
            <% else %>
             <%= link_to "Delete",
              favourite_path(current_user.favourites.select { |f| f.artwork == artwork}.first),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
            <% end %>

            <% if current_user.likes.select { |f| f.artwork == artwork}.empty? %>
              <%= simple_form_for [artwork, @like] do |f| %>
                <%= f.button :submit  %>
              <% end %>
              <% else %>
             <%= link_to "Delete",
              like_path(current_user.likes.select { |f| f.artwork == artwork}.first),
              method: :delete,
              data: { confirm: "Are you sure?" } %>

            <% end %>
          <% end %>
       </div>
     </div>
  <% end %>
</div>

